# ============================================
# REQUIRED CONFIGURATION
# ============================================

# OpenAI Configuration (REQUIRED)
OPENAI_API_KEY=your-api-key-here

# ============================================
# OPTIONAL CONFIGURATION
# ============================================

# Langfuse Configuration (OPTIONAL - for observability)
# Set LANGFUSE_ENABLED=false to disable Langfuse entirely
# Omit LANGFUSE_PUBLIC_KEY and LANGFUSE_SECRET_KEY if you don't want tracing and evaluation features
LANGFUSE_ENABLED=true
LANGFUSE_PUBLIC_KEY=pk-lf-xxx
LANGFUSE_SECRET_KEY=sk-lf-xxx
LANGFUSE_HOST=https://cloud.langfuse.com

# LLM Configuration (OPTIONAL - has defaults)
LLM_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small

# Vector Store Configuration (OPTIONAL - has defaults)
# Possible values: chromadb, memory
VECTOR_STORE_TYPE=chromadb
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_SSL=false
# ChromaDB API Key (OPTIONAL - only needed for authenticated ChromaDB instances)
CHROMA_API_KEY=

# Chunking Configuration (OPTIONAL - has defaults)
CHUNK_SIZE=800
CHUNK_OVERLAP=100
# Minimum chunks required per domain (default: 50)
# Set lower for testing or if you have limited documents
MIN_CHUNKS=50

# Retrieval Configuration (OPTIONAL - has defaults)
# Possible values: similarity, mmr, compression
RETRIEVER_TYPE=similarity
TOP_K=5
SCORE_THRESHOLD=0.5

# Safety Configuration (OPTIONAL - has defaults)
SAFETY_ENABLED=true
# Enable output safety checks (moderation + PII detection on LLM responses)
SAFETY_CHECK_OUTPUT=true

# Cache Configuration (OPTIONAL - has defaults)
# Enable response caching to reduce API calls and improve performance
CACHE_ENABLED=true
# Cache TTL in seconds (default: 3600 = 1 hour)
CACHE_TTL=3600

# Memory Configuration (OPTIONAL - has defaults)
# Conversation memory type: buffer, summary, none
MEMORY_TYPE=buffer
# Maximum tokens for summary memory (only used when MEMORY_TYPE=summary)
MEMORY_MAX_TOKENS=2000

# Logging (OPTIONAL - has defaults)
LOG_LEVEL=error
LOG_FORMAT=auto
NODE_ENV=development
